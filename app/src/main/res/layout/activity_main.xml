<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.ostiarius.trialapplicationframeworks.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Welcome"
        android:text="@string/welcome"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="40dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toOstiarius"
        android:text="@string/toOstiarius"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold|italic"
        android:textSize="35dp"
        android:layout_below="@+id/Welcome"
        android:textAlignment="center"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/home_icon"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/home"
        />
    <TextView
        android:id="@+id/home_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home"
        android:fontFamily="serif-monospace"
        android:textStyle="bold"
        android:layout_below="@id/home_icon"
        android:layout_alignBaseline="@id/home_icon"
        android:layout_marginLeft="105dp"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/alerts"
        android:id="@+id/alert_icon"
        android:layout_toRightOf="@+id/home_icon"
        android:layout_alignBottom="@+id/home_icon"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:id="@+id/alerts_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alerts"
        android:fontFamily="serif-monospace"
        android:textStyle="bold"
        android:layout_below="@id/alert_icon"
        android:layout_alignBaseline="@id/home_text"
        android:layout_marginLeft="230dp"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/settings"
        android:id="@+id/settings_icon"
        android:layout_below="@+id/home_icon"
        android:layout_alignBaseline="@+id/home_icon"
        android:layout_alignEnd="@+id/home_icon"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/settings_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:fontFamily="serif-monospace"
        android:textStyle="bold"
        android:layout_below="@id/settings_icon"
        android:layout_alignBaseline="@id/settings_icon"
        android:layout_marginLeft="85dp"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/find"
        android:id="@+id/search_icon"
        android:layout_below="@+id/alert_icon"
        android:layout_alignBaseline="@+id/alert_icon"
        android:layout_alignEnd="@+id/alert_icon"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/search_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search"
        android:fontFamily="serif-monospace"
        android:textStyle="bold"
        android:layout_below="@id/search_icon"
        android:layout_alignBaseline="@id/settings_icon"
        android:layout_marginLeft="235dp"
        />



</RelativeLayout>
